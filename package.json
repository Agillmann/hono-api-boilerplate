{
	"name": "api-boilerplate",
	"version": "1.0.0",
	"description": "A sophisticated REST API boilerplate with RBAC system built with Hono and TypeScript",
	"license": "MIT",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"build": "bun build src/index.ts --outdir ./dist --target bun",
		"start": "bun run dist/index.js",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"db:generate": "prisma generate ",
		"db:migrate": "prisma migrate dev ",
		"db:deploy": "prisma migrate deploy ",
		"db:resolve": "prisma migrate resolve --applied ",
		"db:studio": "prisma studio ",
		"db:push": "prisma db push ",
		"db:pull": "prisma db pull ",
		"db:reset": "prisma db reset ",
		"gen:openapi": "bun run scripts/generate-openapi.ts"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-validator": "^0.7.2",
		"@prisma/client": "^6.15.0",
		"better-auth": "^1.3.7",
		"hono": "^4.9.6",
		"pino": "^9.9.1",
		"pino-pretty": "^13.1.1",
		"zod": "^4"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.7",
		"@biomejs/biome": "^2.2.2",
		"@types/node": "^24.3.0",
		"@types/pino": "^7.0.5",
		"@types/swagger-jsdoc": "^6.0.4",
		"bun-types": "^1.2.21",
		"prisma": "^6.15.0",
		"swagger-jsdoc": "^6.2.8",
		"typescript": "^5.9.2"
	}
}

{
	"name": "api-boilerplate",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"db:generate": "prisma generate --schema=./src/prisma/schema.prisma",
		"db:migrate": "prisma migrate dev --schema=./src/prisma/schema.prisma",
		"db:studio": "prisma studio --schema=./src/prisma/schema.prisma",
		"db:push": "prisma db push --schema=./src/prisma/schema.prisma",
		"db:pull": "prisma db pull --schema=./src/prisma/schema.prisma",
		"gen:openapi": "bun run scripts/generate-openapi.ts"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-validator": "^0.7.2",
		"@prisma/client": "^6.15.0",
		"better-auth": "^1.3.7",
		"hono": "^4.9.6",
		"pino": "^9.9.1",
		"pino-pretty": "^13.1.1",
		"zod": "^4"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.7",
		"@biomejs/biome": "^2.2.2",
		"@types/node": "^24.3.0",
		"@types/pino": "^7.0.5",
		"@types/swagger-jsdoc": "^6.0.4",
		"bun-types": "^1.2.21",
		"prisma": "^6.15.0",
		"swagger-jsdoc": "^6.2.8",
		"typescript": "^5.9.2"
	}
}
